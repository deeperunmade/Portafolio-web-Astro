---
import Habilidades from "../components/Habilidades.astro";
const { perfil } = Astro.props;
---

<div class="container">
    <div class="row justify-content-center align-items-center g-5">
        <div class="section-title">
			<h4 class="mb-5">Sobre mi</h4>
		</div>
        <div class="col-sm-12 col-lg-3 text-center">
            <img class="img-thumbnail" src={perfil.attributes.imagen.data.attributes.url} alt="" />
        </div>
        <div class="col-sm-12 col-lg-6 offset-1">
            <p style="font-size: 1.2rem;" class="text-center">{perfil.attributes.descripcion}</p>
        </div>
    </div>
    <div class="row mt-5">
        <Habilidades />
    </div>
</div>
